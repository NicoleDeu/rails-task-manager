<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<%if @task.completed %>
  <p><%= "The task is completed." %></p>
<% else %>
  <p><%= "This task is not completed yet." %></p>
<% end %>
<%= link_to "🗑️ Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "🗒️ Back to tasks", tasks_path%>
<%= link_to "✏️ Edit task", edit_task_path%>
